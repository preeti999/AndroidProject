<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_SOS"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimes_180dp"
        android:layout_margin="@dimen/dimes_10dp"
        app:cardCornerRadius="@dimen/dimes_16dp"
        app:cardElevation="@dimen/dimes_16dp"
        app:cardBackgroundColor="@color/pink"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/dimes_10dp" />

    <TextView
        android:id="@+id/txt_sos"
        android:elevation="@dimen/dimes_16dp"
        android:textStyle="bold"
        android:textSize="@dimen/dimes_30sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        app:layout_constraintLeft_toLeftOf="@id/card_SOS"
        app:layout_constraintTop_toTopOf="@id/card_SOS"
        android:layout_margin="@dimen/dimes_16dp"
        />
    <TextView
        android:elevation="@dimen/dimes_16dp"
        android:textColor="#fff"
        android:layout_width="@dimen/dimes_0dp"
        android:layout_height="wrap_content"
        android:text="Hhhhhjkdkfhidkrgniseigrnhiybgiureybgiurybutveurybgukaerbgckuaehrkucnhik"
        app:layout_constraintTop_toBottomOf="@id/txt_sos"
        app:layout_constraintEnd_toStartOf="@id/sosImage"
        app:layout_constraintStart_toStartOf="@id/card_SOS"
        android:layout_margin="@dimen/dimes_16dp"
        />
    <ImageView
        android:id="@+id/sosImage"
        android:elevation="@dimen/dimes_16dp"
        android:layout_width="@dimen/dimes_150dp"
        android:layout_height="@dimen/dimes_150dp"
        android:src="@drawable/ic_sos"
        android:layout_margin="@dimen/dimes_16dp"
        app:layout_constraintBottom_toBottomOf="@id/card_SOS"
        app:layout_constraintRight_toRightOf="@id/card_SOS"
        app:layout_constraintTop_toTopOf="@id/card_SOS"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_Guard"
        app:cardElevation="@dimen/dimes_16dp"
        app:cardCornerRadius="@dimen/dimes_16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimes_180dp"
        android:layout_margin="@dimen/dimes_10dp"
        app:cardBackgroundColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/card_SOS"
        tools:layout_editor_absoluteX="@dimen/dimes_10dp" />

    <TextView
        android:id="@+id/txt_guard"
        android:elevation="@dimen/dimes_16dp"
        android:textStyle="bold"
        android:textSize="@dimen/dimes_30sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guard"
        app:layout_constraintLeft_toLeftOf="@id/card_Guard"
        app:layout_constraintTop_toTopOf="@id/card_Guard"
        android:layout_margin="16dp"
        />
    <TextView
        android:elevation="@dimen/dimes_16dp"
        android:textColor="#fff"
        android:layout_width="@dimen/dimes_0dp"
        android:layout_height="wrap_content"
        android:text="Hhhhhjkdkfhidkrgniseigrnhiybgiureybgiurybutveurybgukaerbgckuaehrkucnhik"
        app:layout_constraintTop_toBottomOf="@id/txt_guard"
        app:layout_constraintEnd_toStartOf="@id/guardImage"
        app:layout_constraintStart_toStartOf="@id/card_Guard"
        android:layout_margin="@dimen/dimes_16dp"
        />
    <ImageView
        android:id="@+id/guardImage"
        android:elevation="@dimen/dimes_16dp"
        android:layout_width="@dimen/dimes_150dp"
        android:layout_height="@dimen/dimes_150dp"
        android:src="@drawable/ic_shield"
        android:layout_margin="@dimen/dimes_16dp"
        app:layout_constraintBottom_toBottomOf="@id/card_Guard"
        app:layout_constraintRight_toRightOf="@id/card_Guard"
        app:layout_constraintTop_toTopOf="@id/card_Guard"

        />




</androidx.constraintlayout.widget.ConstraintLayout>